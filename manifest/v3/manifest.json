{
  "manifest_version": 3,
  "name": "Owlie Youtube assistant",
  "version": "1.0",
  "author": "owliext@gmail.com",
  "background": { "service_worker": "background/background.js" },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["app/app.js"],
      "css": ["app/app.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*", "app/*", "background/*", "popup/*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],

  "description": "Summarizes the content of youtube video using available transcription and NLP model (GPT 3.5).",

  "icons": {
    "48": "icons/icon-1.png"
  },

  "host_permissions": [
    "https://g9163tkhmf.execute-api.eu-west-1.amazonaws.com/"
  ],
  "permissions": ["webRequest", "storage", "management"]
}
