{
  "manifest_version": 3,
  "name": "Owlie Youtube assistant",
  "version": "2.0",
  "author": "owliext@gmail.com",
  "background": { "service_worker": "background/background.js" },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["app/app.js"],
      "css": ["app/app.css"]
    }
  ],

  "action": {
    "default_icon": {
      "64": "icons/icon-1.png"
    },
    "default_tile": "Dashboard",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*", "app/*", "background/*", "popup/*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],

  "description": "Interact with YouTube videos through AI: ask questions, summarize and search for keywords spoken in the video.",

  "icons": {
    "64": "icons/icon-1.png"
  },

  "host_permissions": [
    "https://owlie.essa.lol/",
    "https://qdfxsg29c0.execute-api.eu-west-1.amazonaws.com/"
  ]
}
