{
  "manifest_version": 3,
  "name": "Owlie Youtube assistant",
  "version": "1.0",
  "author": "royfish@proton.me",

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "scripts/logger.js",
        "scripts/callServer.js",
        "scripts/ytAction.js"
      ],
      "css": ["chatbox/chatbox.css"]
    }
  ],

  "web_accessible_resources": [{"resources": ["icons/*", "scripts/*", "chatbox/*"], "matches": ["https://www.youtube.com/*"]}],

  "description": "Summarizes the content of youtube video using available transcription and NLP model (GPT 3.5).",

  "icons": {
    "48": "icons/icon-1.png"
  },

  "host_permissions": ["https://ons6nbp1sc.execute-api.eu-west-1.amazonaws.com/"],
  "permissions": [
    "webRequest",
    "storage"
  ]
}
