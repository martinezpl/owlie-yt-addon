{
  "manifest_version": 2,
  "name": "Owlie Youtube assistant",
  "version": "1.0",
  "author": "owliext@gmail.com",

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["app/app.js"],
      "css": ["app/app.css"]
    }
  ],

  "web_accessible_resources": ["app.html", "icons/*"],

  "description": "Summarizes the content of youtube video using available transcription and NLP model (GPT 3.5).",

  "icons": {
    "64": "icons/icon-1.png"
  },

  "permissions": [
    "webRequest",
    "storage",
    "management",
    "https://owlie.essa.lol/"
  ],

  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/icon-1.png",
    "default_popup": "popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "owliext@gmail.com"
    }
  }
}
