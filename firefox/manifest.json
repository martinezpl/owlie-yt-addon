{
  "manifest_version": 2,
  "name": "Owlie Youtube assistant",
  "version": "1.0",
  "author": "royfish@proton.me",

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch?v=*"],
      "js": [
        "scripts/logger.js",
        "scripts/callServer.js",
        "scripts/ytAction.js"
      ],
      "css": ["chatbox/chatbox.css"]
    }
  ],

  "web_accessible_resources": ["icons/*", "scripts/*", "chatbox/chatbox.html"],

  "description": "Summarizes the content of youtube video using available transcription and NLP model (GPT 3.5).",

  "icons": {
    "48": "icons/icon-1.png"
  },

  "permissions": [
    "webRequest",
    "storage",
    "https://qklzaxu7sazzq4xxw7qggrye7y0lxyhs.lambda-url.eu-west-1.on.aws/"
  ],

  "browser_action": {
    "default_icon": "icons/icon-1.png",
    "default_popup": "popup/popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }
}
